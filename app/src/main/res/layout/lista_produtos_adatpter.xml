<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.meusprodutos.MeusProdutosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageProdutoId"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_pets_24" />

        <TextView
            android:id="@+id/textTituloId"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Titulo do Produto"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textStatusId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textDescricaoId"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:text="Descrição do Produto"
        android:textSize="12sp" />

</LinearLayout>
